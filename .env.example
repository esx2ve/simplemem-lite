# SimpleMem Lite Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# EMBEDDING API KEYS
# =============================================================================

# OpenRouter for general LLM calls and fallback embeddings
OPENROUTER_API_KEY=

# Gemini API (alternative for summaries)
GEMINI_API_KEY=

# OpenAI API (for embeddings if not using local)
OPENAI_API_KEY=

# =============================================================================
# CODE EMBEDDING CONFIGURATION
# =============================================================================

# Code embedding provider: voyage | openrouter | local
# Default: voyage (best quality for code)
# Fallback chain: voyage -> openrouter -> local
SIMPLEMEM_LITE_CODE_EMBEDDING_PROVIDER=voyage

# Voyage AI API key (for voyage-code-3 model)
# Get your key at: https://www.voyageai.com/
# Dimensions: 1024
VOYAGE_API_KEY=

# Voyage model for code embeddings
SIMPLEMEM_LITE_VOYAGE_CODE_MODEL=voyage-code-3

# Local model (used as fallback when APIs unavailable)
# Dimensions: 768
SIMPLEMEM_LITE_CODE_LOCAL_MODEL=jinaai/jina-embeddings-v2-base-code

# OpenRouter model (fallback between Voyage and Local)
# Dimensions: 3072
SIMPLEMEM_LITE_OPENROUTER_CODE_MODEL=openai/text-embedding-3-large

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Use local embeddings for memory (not code) - sentence-transformers
SIMPLEMEM_LITE_USE_LOCAL_EMBEDDINGS=true

# Summary model for LLM synthesis
SIMPLEMEM_LITE_SUMMARY_MODEL=openrouter/google/gemini-2.0-flash-lite-001

# Output format: toon (30-60% token savings) or json
SIMPLEMEM_OUTPUT_FORMAT=toon

# Enable AST-aware code chunking (requires tree-sitter)
SIMPLEMEM_LITE_AST_CHUNKING_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Global log level: TRACE | DEBUG | INFO | WARNING | ERROR
SIMPLEMEM_LITE_LOG_LEVEL=INFO

# Component-specific log levels (override global for debugging)
SIMPLEMEM_LITE_LOG_AST=          # AST chunker: DEBUG for chunk details
SIMPLEMEM_LITE_LOG_EMBEDDINGS=   # Embedding providers: DEBUG for fallback chain
SIMPLEMEM_LITE_LOG_INDEXER=      # Code indexer: DEBUG for per-file stats

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Memgraph (graph database)
SIMPLEMEM_MEMGRAPH_HOST=localhost
SIMPLEMEM_MEMGRAPH_PORT=7687
SIMPLEMEM_MEMGRAPH_USERNAME=
SIMPLEMEM_MEMGRAPH_PASSWORD=

# FalkorDB (legacy graph backend)
SIMPLEMEM_FALKOR_HOST=localhost
SIMPLEMEM_FALKOR_PORT=6379
SIMPLEMEM_FALKOR_PASSWORD=
